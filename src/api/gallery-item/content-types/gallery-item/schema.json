{
  "kind": "collectionType",
  "collectionName": "gallery_items",
  "info": {
    "singularName": "gallery-item",
    "pluralName": "gallery-items",
    "displayName": "GalleryItem",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "uuid": {
      "type": "uid",
      "required": true
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "title": {
      "type": "string",
      "required": true
    },
    "caption": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "artworks": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::artwork.artwork"
    },
    "date": {
      "type": "date"
    }
  }
}
